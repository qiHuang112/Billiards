<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_score_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        tools:itemCount="3"
        tools:listitem="@layout/item_score_board" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_operator_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_next"
        tools:itemCount="5"
        tools:listitem="@layout/item_game_board" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_game_board"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/tv_next"
        tools:itemCount="5"
        tools:listitem="@layout/item_game_board" />

    <TextView
        android:id="@+id/tv_next"
        style="@style/HomeButtonStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="下一局"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_end"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_end"
        style="@style/HomeButtonStyle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="结束"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_next" />

</androidx.constraintlayout.widget.ConstraintLayout>