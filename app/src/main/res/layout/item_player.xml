<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tv_player_name"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_name"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="黄麒" />

            <TextView
                android:id="@+id/tv_win_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/tv_win_count_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_win_count_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="胜场"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_win_count"
                app:layout_constraintRight_toRightOf="@id/tv_win_count" />

            <TextView
                android:id="@+id/tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/tv_total_count_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_win_count"
                tools:text="10" />

            <TextView
                android:id="@+id/tv_total_count_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="总场"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_total_count"
                app:layout_constraintRight_toRightOf="@id/tv_total_count" />

            <TextView
                android:id="@+id/tv_win_rate"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/tv_win_rate_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_total_count"
                tools:text="100%" />

            <TextView
                android:id="@+id/tv_win_rate_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="胜率"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_win_rate"
                app:layout_constraintRight_toRightOf="@id/tv_win_rate" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/tv_cost_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_win_rate"
                tools:text="20" />

            <TextView
                android:id="@+id/tv_cost_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="台费"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_cost"
                app:layout_constraintRight_toRightOf="@id/tv_cost" />

            <TextView
                android:id="@+id/tv_total_score"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintBottom_toTopOf="@id/tv_total_score_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_cost"
                tools:text="2099" />

            <TextView
                android:id="@+id/tv_total_score_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="总收益"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_total_score"
                app:layout_constraintRight_toRightOf="@id/tv_total_score" />

            <TextView
                android:id="@+id/tv_last5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minWidth="30dp"
                android:textColor="@color/black"
                android:textSize="40dp"
                app:layout_constraintBottom_toTopOf="@id/tv_last5_desc"
                app:layout_constraintLeft_toRightOf="@+id/tv_total_score"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="20" />

            <TextView
                android:id="@+id/tv_last5_desc"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="最近5场收益"
                android:textColor="@color/black"
                android:textSize="11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_last5"
                app:layout_constraintRight_toRightOf="@id/tv_last5" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</FrameLayout>
