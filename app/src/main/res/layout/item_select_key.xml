<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="40dp"
    android:paddingEnd="40dp">

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="17dp"
        app:layout_constraintEnd_toStartOf="@id/tv_key_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_selected" />

    <TextView
        android:id="@+id/tv_key_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_selected"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="mj" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@id/iv_selected" />


</androidx.constraintlayout.widget.ConstraintLayout>