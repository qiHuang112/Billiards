<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.qi.billiards.ui.main.MainFragment"
        android:label="Main Fragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_to_game"
            app:destination="@id/gameFragment" />

        <action
            android:id="@+id/action_to_history"
            app:destination="@id/historyFragment" />

        <action
            android:id="@+id/action_to_data"
            app:destination="@id/dataFragment" />

        <action
            android:id="@+id/action_to_player"
            app:destination="@id/playerFragment" />

        <action
            android:id="@+id/action_to_import"
            app:destination="@id/importFragment" />

        <action
            android:id="@+id/action_to_settings"
            app:destination="@id/settingsFragment" />

<!--        actionToDev-->
        <action
            android:id="@+id/action_to_dev"
            app:destination="@id/devFragment" />

    </fragment>


    <fragment
        android:id="@+id/gameFragment"
        android:name="com.qi.billiards.ui.main.GameFragment"
        android:label="Game Fragment"
        tools:layout="@layout/fragment_game">

        <argument
            android:name="game"
            app:argType="com.qi.billiards.bean.Game" />
        <argument
            android:name="reload"
            app:argType="boolean" />

    </fragment>

    <fragment
        android:id="@+id/playerFragment"
        android:name="com.qi.billiards.ui.main.PlayerFragment"
        android:label="NewPlayerFragment"
        tools:layout="@layout/fragment_player" />

    <fragment
        android:id="@+id/historyFragment"
        android:name="com.qi.billiards.ui.main.HistoryFragment"
        android:label="HistoryFragment"
        tools:layout="@layout/fragment_history">

        <action
            android:id="@+id/action_to_game"
            app:destination="@id/gameFragment" />
    </fragment>

    <fragment
        android:id="@+id/importFragment"
        android:name="com.qi.billiards.ui.main.ImportFragment"
        android:label="ImportFragment"
        tools:layout="@layout/fragment_import" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.qi.billiards.ui.main.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/dataFragment"
        android:name="com.qi.billiards.ui.main.DataFragment"
        android:label="DataFragment"
        tools:layout="@layout/fragment_data" />

    <fragment
        android:id="@+id/devFragment"
        android:name="com.qi.billiards.ui.main.DevFragment"
        android:label="DevFragment"
        tools:layout="@layout/fragment_dev" />

</navigation>